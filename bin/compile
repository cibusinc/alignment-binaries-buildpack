#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing muscle."
# change to build dir
cd $1
# download muscle from s3
curl https://s3-us-west-2.amazonaws.com/sif-sprint/alignment_algorithms/muscle/muscle_linux.tar.gz -L -o muscle.tar.gz
# make target dir
mkdir -p vendor/muscle
# unzip
tar -C vendor/muscle -xvzf muscle.tar.gz
# clean up
rm muscle.tar.gz

# add profile-d scripts to set up PATH
mkdir -p $build/.profile.d
echo 'PATH=$PATH:$HOME/vendor/muscle' > $build/.profile.d/alignment_algorithms.sh
