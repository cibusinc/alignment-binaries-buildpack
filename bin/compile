#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing muscle."
# change to build dir
cd $1
# download muscle from s3
curl https://s3-us-west-2.amazonaws.com/sif-sprint/alignment_algorithms/muscle/muscle3.8.31_i86linux64.tar.gz -L -o muscle.tar.gz
# make target dir
mkdir -p vendor/muscle
# unzip
tar -C vendor/muscle -xvfz muscle.tar.gz
# clean up
rm muscle.tar.gz
